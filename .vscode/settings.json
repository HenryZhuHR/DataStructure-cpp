        "**/.git": false,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true
    },
    
    "clangd.arguments": [
        "--background-index",
        "--compile-commands-dir=build",
        "-j=10",
        "--query-driver=/usr/bin/clang++",
